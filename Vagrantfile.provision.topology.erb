# -*- mode: ruby -*-
# vi: set ft=ruby :
$docker_script = <<SCRIPT
echo "192.168.45.1 puppet.example.com vg-puppet" |sudo tee -a /etc/hosts
echo "192.168.45.2 vg-puppet-agent-ubuntu.example.com vg-puppet-agent-ubuntu" |sudo tee -a /etc/hosts
echo "192.168.45.3 vg-puppet-agent-centos.example.com vg-puppet-agent-centos" |sudo tee -a /etc/hosts
cat /etc/hosts
echo "name: nameserver, ip: 8.8.8.8 " |sudo tee -a /etc/resolv.conf
cat /etc/resolv.conf
SCRIPT

Vagrant.configure("2") do |config|
  config.vm.provider "virtualbox" do |vb|
    vb.gui = false
    vb.memory = "512"
    vb.cpus = 1
  end

  config.vm.define "vg-puppet" do |webtier|
      webtier.vm.box = "bento/ubuntu-19.10"
      webtier.vm.hostname = "control01"
      webtier.vm.network "private_network", ip: "192.168.45.41"
      webtier.vm.provider "virtualbox" do |vb|
          vb.name = "vbox-puppet"
      end

      #webtier.vm.provision "shell", inline: $docker_script, privileged: false
      webtier.vm.provision :shell, path: "provisioning/bootstrap-puppet-master.sh"
      webtier.vm.provision "shell", inline: <<-SHELL
      hostnamectl set-hostname vg-puppet
      SHELL
    end

  config.vm.define "vg-puppet-agent-ubuntu" do |webtier|
      webtier.vm.box = "bento/ubuntu-19.10"
      webtier.vm.hostname = "control01"
      webtier.vm.network "private_network", ip: "192.168.45.42"
      webtier.vm.provider "virtualbox" do |vb|
          vb.name = "vbox-puppet-agent-ubuntu"
      end

      #webtier.vm.provision "shell", inline: $docker_script, privileged: false
      webtier.vm.provision "shell", inline: <<-SHELL
      hostnamectl set-hostname vg-puppet-agent-ubuntu
      SHELL
    end

  config.vm.define "vg-puppet-agent-centos" do |webtier|
      webtier.vm.box = "bento/centos-7.6"
      webtier.vm.hostname = "control01"
      webtier.vm.network "private_network", ip: "192.168.45.43"
      webtier.vm.provider "virtualbox" do |vb|
          vb.name = "vbox-puppet-agent-centos"
      end

      #webtier.vm.provision "shell", inline: $docker_script, privileged: false
      webtier.vm.provision "shell", inline: <<-SHELL
      hostnamectl set-hostname vg-puppet-agent-centos
      SHELL
    end


end
